<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Dynamic Light Theme (Material You) -->
    <style name="Light" parent="unicodesinhala">
        <item name="fox_background">@android:color/system_neutral1_100</item>
        <item name="accent">@android:color/system_accent1_600</item>
        <item name="foreground">@android:color/system_neutral1_900</item>
        <item name="foreground_2">@android:color/system_neutral2_600</item>
        <item name="isLight">true</item>
        <item name="border">@android:color/system_neutral1_100</item>
        
        <!-- Keys -->
        <item name="keyNormal">@android:color/system_neutral1_50</item>
        <item name="keyFunction">@android:color/system_neutral2_200</item>
        <item name="keyAction">@android:color/system_accent1_200</item>
        
        <!-- Pressed States -->
        <item name="keyNormalPressed">@android:color/system_neutral1_200</item>
        <item name="keyFunctionPressed">@android:color/system_neutral2_300</item>
        <item name="keyActionPressed">@android:color/system_accent1_300</item>
        <item name="keyShadowColor">#40000000</item>
    </style>

    <!-- Dynamic Night Theme (Material You) -->
    <style name="Night" parent="unicodesinhala">
        <item name="fox_background">@android:color/system_neutral1_900</item>
        <item name="accent">@android:color/system_accent1_200</item>
        <item name="foreground">@android:color/system_neutral1_100</item>
        <item name="foreground_2">@android:color/system_neutral2_400</item>
        <item name="isLight">false</item>
        <item name="border">@android:color/system_neutral1_900</item>
        
        <!-- Keys -->
        <item name="keyNormal">@android:color/system_neutral1_800</item>
        <item name="keyFunction">@android:color/system_neutral2_800</item>
        <item name="keyAction">@android:color/system_accent1_700</item>
        
        <!-- Pressed States -->
        <item name="keyNormalPressed">@android:color/system_neutral1_700</item>
        <item name="keyFunctionPressed">@android:color/system_neutral2_700</item>
        <item name="keyActionPressed">@android:color/system_accent1_600</item>
        <item name="keyShadowColor">#40000000</item>
    </style>

    <!-- Dynamic Light No Border -->
    <style name="LightNoBorder" parent="Light">
        <item name="border">?attr/fox_background</item>
        <item name="keyShadowColor">@android:color/transparent</item>
        <item name="keyNormal">@android:color/transparent</item>
        <item name="keyFunction">@android:color/transparent</item>
    </style>

    <!-- Dynamic Night No Border -->
    <style name="NightNoBorder" parent="Night">
        <item name="border">?attr/fox_background</item>
        <item name="keyShadowColor">@android:color/transparent</item>
        <item name="keyNormal">@android:color/transparent</item>
        <item name="keyFunction">@android:color/transparent</item>
    </style>
</resources>