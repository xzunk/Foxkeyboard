<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/fox_background"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="8dp"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="?attr/fox_background"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <include
            android:id="@+id/suggestionContainer"
            layout="@layout/suggestion_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_emoji"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_emoji"
            android:padding="8dp"
            android:background="?android:selectableItemBackground"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/keyboard_rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/key_row_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="1"
                    android:text="1" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="2"
                    android:text="2" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="3"
                    android:text="3" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="4"
                    android:text="4" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="5"
                    android:text="5" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="6"
                    android:text="6" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="7"
                    android:text="7" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="8"
                    android:text="8" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="9"
                    android:text="9" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/n_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="0"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_row_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_q"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="q"
                    android:text="q" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_w"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="w"
                    android:text="w" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_e"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="e"
                    android:text="e" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_r"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="r"
                    android:text="r" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_t"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="t"
                    android:text="t" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_y"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="y"
                    android:text="y" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_u"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="u"
                    android:text="u" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_i"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="i"
                    android:text="i" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_o"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="o"
                    android:text="o" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_p"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="p"
                    android:text="p" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_row_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/blank_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="a"
                    android:text="a" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="s"
                    android:text="s" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_d"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="d"
                    android:text="d" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_f"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="f"
                    android:text="f" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_g"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="g"
                    android:text="g" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="h"
                    android:text="h" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_j"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="j"
                    android:text="j" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_k"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="k"
                    android:text="k" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_l"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="l"
                    android:text="l" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/colon_wijesekara"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="59"
                    android:text=";"
                    android:background="@drawable/key_background_function"
                    android:visibility="gone" />

                <View
                    android:id="@+id/blank_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_row_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shift"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/key_background_function"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_shift" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_z"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="z"
                    android:text="z" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_x"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="x"
                    android:text="x" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="c"
                    android:text="c" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_v"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="v"
                    android:text="v" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="b"
                    android:text="b" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_n"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="n"
                    android:text="n" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/l_m"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="m"
                    android:text="m" />

                <ImageView
                    android:id="@+id/backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/key_background_function"
                    android:padding="14dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_backspace" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_row_5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/panel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag=""
                    android:text="#"
                    android:background="@drawable/key_background_function"/>

                <ImageView
                    android:id="@+id/lang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_background_function"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@null" />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/symbol_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="s1"
                    android:text="/"
                    android:visibility="gone"
                    android.background="@drawable/key_background_function"/>

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/comma"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="44"
                    android:text=","
                    android:background="@drawable/key_background_function"/>

                <ImageView
                    android:id="@+id/space"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/key_background_normal"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_space_bar"
                    android:tag=" " />

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/comma_wijesekara"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="44"
                    android:text=","
                    android:visibility="gone"
                    android:background="@drawable/key_background_function"/>

                <unicode.sinhala.keyboard.KeyboardButton
                    android:id="@+id/dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="46"
                    android:text="."
                    android:background="@drawable/key_background_function"/>

                <ImageView
                    android:id="@+id/action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_background_action"
                    android:padding="4dp"
                    android:scaleType="centerInside" />

            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/emoji_view"
            layout="@layout/emoji_layout"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>